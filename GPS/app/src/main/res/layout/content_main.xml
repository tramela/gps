        android:background="@drawable/circle_background"
        />

        ]]>

        <Button
            android:id="@+id/btLocalizar"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:text="START" />

        <Button
            android:id="@+id/pause"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:text="Pause" />

        <Button
            android:id="@+id/stop"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:text="RESET" />

        <Button
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:text="MAPA"
            android:id="@+id/mapa"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <com.example.rafa.gps.PauseableChronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView3"
        android:textColorHint="#ffffff"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Duração"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#8e1616"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/precisao"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Velocidade"
        android:id="@+id/textView"
        android:textColor="#8e1616"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chronometer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distância"
        android:id="@+id/textView2"
        android:textColor="#8e1616"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calorias"
        android:id="@+id/textView4"
        android:textColor="#8e1616"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vel. Média"
        android:id="@+id/textView5"
        android:textColor="#8e1616"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/velo"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dist"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/cal"
        android:textColor="#000000"
        android:layout_marginLeft="0dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/velmed"
        android:textColor="#000000"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="28dp"
        android:gravity="center"
        android:layout_height="28dp"
        android:src="@drawable/chron"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="3dp" />

    <ImageView
        android:layout_width="30dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:src="@drawable/dist"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginLeft="-15dp" />

    <ImageView
        android:layout_width="28dp"
        android:gravity="center"
        android:layout_height="28dp"
        android:src="@drawable/fire"
        android:id="@+id/imageView5"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toStartOf="@+id/imageView3" />

    <ImageView
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:src="@drawable/speed"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="-6dp" />

    <ImageView
        android:layout_width="30dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:src="@drawable/med"
        android:id="@+id/imageView4"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/imageView2" />


</RelativeLayout>
